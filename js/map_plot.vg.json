{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 500,
    "width": 1000,
    "title": "World Happiness Report 2019",
    "projection": {"type": "equirectangular"},
    "layer": [
        {
            "data": {
                "url": "js/ne_110m_land.json",
                "format": {"type": "topojson", "feature": "ne_110m_land"}
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgrey",
                "stroke": "black"
            }
        },
        {
            "data":{
                "url": "js/ne_110m_admin_0_countries.json",
                "format":{
                    "type":"topojson", "feature": "ne_110m_admin_0_countries"
                    }
                },
                "mark": {"type": "geoshape", "fill": null, "stroke": "black"}
        },
        {
            "data":{
                "url": "js/ne_110m_graticules_30.json",
                "format":{
                    "type":"topojson", "feature": "ne_110m_graticules_30"
                    }
                },
                "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                          "url": "data/world_happiness_report_2019.csv"
                        },
                        "key": "Country or region",
                        "fields": ["Score"]
                      }
                },
                {
                    "calculate": "datum.Score + 0.1", 
                    "as": "Happiness Score"
                }
            ],
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color": {
                    "field": "Score",
                    "title": "Happiness Score",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [250, 500, 750],
                        "range": ["#DAF7A6", "#FFC300", "#FF5733", "#900C3F"]
                    }
                },
                "tooltip": [
                    {
                        "field": "Country or region", 
                        "type": "nominal", 
                        "title": "Country or region"
                    },
                    {
                        "field": "Score",
                        "type": "quantitative",
                        "title": "Happiness Score"
                    }
                  ]
            }
        }
    ]
}